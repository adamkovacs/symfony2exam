{% extends "CoreBundle::layout.html.twig" %}

{% block body %}
<div id="container">
    <div id="header">
        <div class="nav">
            <ul>
                <li><a href="login.html">Login</a></li>
                <li><a href="registration.html">Registration</a></li>
            </ul>
        </div>
        <div class="nav-menu">
            <ul>
                <li><a href="information.html">About us</a></li>
                <li><a href="information.html">Posting a job</a></li>
                <li><a href="information.html">Became a member</a></li>
            </ul>
        </div>
        <div class="clearfix"></div>
        <div class="content">
            <h1>
                <a href="index.html"><img src="images/jobz.gif"></a>
            </h1>
            <div id="sub_header">
                <div class="post">
                    <h2>
                        Ask for people
                    </h2>
                    <div>
                        <a href="post.html">Post a Job</a>
                    </div>
                </div>
                <div class="search">
                    <img src="images/ask.png" alt="ask">
                    <h2>
                        Ask for a job
                    </h2>
                    <form action="" method="get">
                        <input name="keywords" id="search_keywords" class="input" type="text"><input value="search" src="images/search.png" class="but_search" type="image">
                        <div class="help">
                            Enter some keywords (city, country, position, ...)
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div id="content">
        <div class="content">
            <h1>
                Login
            </h1>
            <form action="{{ path('jobz_core_security_logincheck') }}" method="post">
                <label for="username">Email:</label>
                <input type="text" id="username" name="_username" value="{{ last_email }}" />

                <label for="password">Password:</label>
                <input type="password" id="password" name="_password" />

                <button type="submit">login</button>
            </form>
        </div>
    </div>
    <div id="footer">
        <div class="content">
            <ul>
                <li>
                    <a href="information.html">About us</a>
                </li>
                <li class="feed">
                    <a href="information.html">Contact</a>
                </li>
                <li>
                    <a href="information.html">JobZ API</a>
                </li>
                <li class="last">
                    <a href="information.html">Affiliates</a>
                </li>
            </ul>
        </div>
    </div>
</div>


{% endblock %}